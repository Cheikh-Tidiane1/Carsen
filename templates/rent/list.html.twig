{% extends 'base.html.twig' %}

{% block title %}Louer - Carsen-Automobile{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3> Nos - Vehicules</h3>
            <div class="row voiture-container">
                {% for voiture in voitureLoc %}
                    <div class="col-md-4 g-2">
                        <div class="voiture-item">
                            <a href="{{ path('rentCarPerso',{'slug' : voiture.slug ,'dateDebut' : dateDebut, 'dateFin' : dateFin,'nombreDeJour' : nombreDeJour}) }}" style="text-decoration: none; color:inherit">
                                <div class="card bg-light " style="width: 20rem;">
                                    <img src="/uploads/photoCarLoc/{{ voiture.photo }}" alt="{{ voiture.modele}}">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ voiture.modele }}</h5>
                                        <p class="card-text text-sm-start">{{ voiture.description }}</p>
                                        <h6 class="card-title">{{ (voiture.prix/100)|number_format(0, ',', ' ') }} FCFA / Jour</h6>
                                    </div>
                                </div></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}