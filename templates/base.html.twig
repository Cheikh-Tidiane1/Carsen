    <div class="container marketing {% if block('carousel') is not defined %}mt-5{% endif %}">

          {% block content %}
              {%  block plus %}
              {% endblock %}
              {%  block Location %}
              {% endblock %}

          {% endblock %}


    </div><!-- /.container -->

    <!-- FOOTER -->
    <footer class="footer-custom">
        <p>&copy; 2020-2022 Carsen-Automobile <br/>
            <small>Vente & Location de voiture<br/></small>
        </p>
    </footer>
</main>
